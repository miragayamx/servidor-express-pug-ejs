<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include('../partials/head'); %>
    </head>
    <body>
        <div class="container">
            <h1 class="display-4">Lista de productos</h1>
            <% if(existe){ %>
                <table class="table table-responsive table-dark table-striped">
                    <thead>
                        <tr>
                            <th>Titulo</th>
                            <th>Precio</th>
                            <th>Imagen</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% lista.forEach(function(element){ %>
                            <tr>
                                <td><%= element.title %></td>
                                <td><%= element.price %></td>
                                <td><img height="80" src=<%= element.thumbnail %> alt="#"></td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            <% } else{ %>
                <div class="alert alert-info" role="alert">
                    No se encontraron productos
                </div>
            <% } %>
        </div>
    </body>
</html>